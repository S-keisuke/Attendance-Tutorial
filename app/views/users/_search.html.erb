<p>ユーザー名検索</p>
<%= form_tag(search_user_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<ul><% @users.each do |user| %>
  <li>
    <%= link_to user.name, post %>
  </li>
  <%= link_to edit_basic_info_user_path(user), remote: true, class: "btn btn-success" %>
  <%= link_to "削除", user, method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
  <% end %>
</ul>