<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td class="col-5 text-left" style="width: 35%"><%= link_to "◀", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
          【<%= l(@first_day, format: :middle) %>】勤怠管理表
          <%= link_to "▶", user_path(date: @first_day.next_month), class: "btn btn-primary " %>
      </td>
      <td class="text-left" style="width: 20%">指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
      <td class="text-left" colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td class="text-left" style="width: 15%">月初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td class="text-left">所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td class="text-left" style="width: 20%">名前：<%= @user.name %></td>
      <td class="text-left" style="width: 10%">コード</td>
      <td class="text-left" style="width: 5%"><%= "#" %></td>
      <td class="text-left"  style="width: 15%">出勤日数：<%= @worked_sum %>日</td>
      <td class="text-left">月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th rowspan="2">残業指示</th>
        <th rowspan="2">指示者</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <!--追加機能No1関連 曜日列に表示される文字によって文字色を分岐させる-->
          <td>
            <!--追加機能No1関連 day.worked_on.wdayの値が0の時は赤表示、以下同様-->
            <% if day.worked_on.wday == 0 %>
              <font color="#FF0000"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 6 %>
              <font color="#0000FF"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% else %>
              <font color="#000000"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% end %>
          </td>
          <!--day.started_at は datetime型である、そこからhourの要素を取得-->
          <td><%= day.started_at.hour if day.started_at.present? %></td>
          <td><%= day.started_at.min if day.started_at.present? %></td>
          <td>
            <!--attendance_state (attendances_helperにて定義)  -->
            <% if btn_text = attendance_state(day) %>
                <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= day.finished_at.hour if day.finished_at.present? %></td>
          <td><%= day.finished_at.min if day.finished_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% else %>
              <P></P>
            <% end %>
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>    
  </table>
</div>